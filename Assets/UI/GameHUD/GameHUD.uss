.game-hud {
  position: absolute;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
}

.orders-parent {
  position: absolute;
  left: 5px;
  top: 5px;
  background-color: #dd9061; 
  border-radius: 10px;
  width: 90px;
  /* height: 160px; */
  padding: 4px;
}

/* Orders Panel */
.orders-panel {
  width: 100%; 
  height: 100%;
  background-image: url("project://database/Assets/UI/OrderBackground.png");
  align-items: center;
  justify-content: center
}

