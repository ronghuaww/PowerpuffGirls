.room-meter-hud {
  position: absolute;
  width: 100%;
  height: 100%;
}

.meter-container {
  position: absolute;
  top: 0px;
  right: 0px;
  height: 300px;
  border-radius: 10px;
}

.meter-label {
  font-size: 12px;
  color: #FFFFFF;
  -unity-font-style: bold;
  margin-bottom: 10px;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 10px;
  padding: 4px 8px;

  
  -unity-text-align: upper-center;
  width: 75px; 
  white-space: normal;

}

.meter-bar-wrapper {
  flex-direction: row;
  height: 100%;
}

.arrow-indicator {
  position: absolute;
  width: 20px;
  height: 20px;
  left: 25px;
}

.arrow-icon {
  font-size: 14px;
  color: #FFFFFF;
  -unity-text-align: middle-center;
}

.meter-bar-vertical {
  width: 20px;
  height: 100%;
  border-radius: 5px;
  overflow: hidden;
  flex-direction: column;
  margin-left: 45px;
}

.meter-section {
  width: 100%;
  flex-grow: 1;
}

.meter-section-yellow {
  background-color: #FFD93D;
}

.meter-section-blue {
  background-color: #4ECDC4;
}

.meter-section-red {
  background-color: #FF6B6B;
}
